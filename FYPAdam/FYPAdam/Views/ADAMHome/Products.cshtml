@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/Navbar.cshtml";
}

@using DTO;
<!doctype html>
<html>
<head>
    <title></title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, maximum-scale=1">
</head>
<body style="background-color: white">

    <div class="container">
        <!--Service-->
        <section id="productsMenu">
            @{
                int i = 0;
            }
            <br />
            <br />
            <br />
            <br />

            <div class="row">
                <div>
                    <h1 class="page-header" id="productMenu">
                        Laptops
                    </h1>
                </div>
                @foreach (var prod in @Model.Products)
                {

                    <div class="col-lg-6">
                        <div class="productBox">
                            <div class="row" id="product">
                                <div class="col-lg-3">
                                    <a href="@Url.Action("ProductDetails", "ADAMHome", new {pId=@prod.Id})">
                                        <img src="@prod.ImageUrl" alt="@prod.Title" id="productImage">
                                    </a>
                                </div>
                                <div class="col-lg-8">

                                    <div class="row">
                                        <a href="@Url.Action("ProductDetails", "ADAMHome", new {pId=@prod.Id})">
                                            <h4>@prod.Title</h4>
                                        </a>
                                    </div>
                                    <div class="row">
                                        <span class="stars-container stars-@prod.Rating">★★★★★</span>
                                    </div>



                                </div>



                                <div class="col-lg-1">
                                    <div class="row">
                                        <button type="button" class="btn btn-success btn-sm" onclick="location.href = '../../ADAMHome/SignUp'" id="FollowButton"><strong>Follow</strong></button>
                                    </div>
                                </div>


                                <br />
                            </div>
                            <br />
                        </div>
                    </div>




                }
            </div>

            <div class="row">
                <div class="col-lg-5"></div>
                <div class="col-lg-5">
                    <ul class="pagination" id="paginationPosition">
                        <li>
                            <a href="#" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        <li style="color: black"><a href="#">1</a></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">4</a></li>
                        <li><a href="#">5</a></li>
                        <li>
                            <a href="#" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="col-lg-3"></div>
            </div>
        </section>
        <!--Service-->
        <!-- Portfolio -->
        <section id="brandBasedGraphs" class="content">
            <div>
                <h1 class="page-header" id="brandFeatureGraph">
                    Feature Comparison
                </h1>
            </div>
            <div class="row">
                <div class="col-lg-8"></div>
            </div>
        </section>
        <!--/Portfolio -->
    </div>


</body>
</html>

