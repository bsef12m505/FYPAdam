                        <div class="row">
                            <div class="trendsBox" id="trendsBox1">
                            </div>
                        </div>

                        <div class="row" style="margin-top: 10px">
                            <div class="trendsBox" id="linechart">
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </section>
