@{
    ViewBag.Title = "ProductDetails";
}
@using DTO;

<!doctype html>
<html>
<head>
   <title></title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, maximum-scale=1">
    <link rel="icon" href="~/img/favicon.png" type="image/png">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Scripts/fancybox/jquery.fancybox.css" rel="stylesheet" />
    <link href="~/font-awesome/css/style.css" rel="stylesheet" />
    <link href="~/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href="~/font-awesome/css/animate.css" rel="stylesheet" />
    <link href="~/Content/Custom.css" rel="stylesheet" />
    <link href="~/Content/reveal.css" rel="stylesheet" />
    <script src="~/Scripts/plugins/flot/jquery.reveal.js"></script>
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">
        google.charts.load('current', { 'packages': ['bar', 'line', 'corechart'] });
        google.charts.setOnLoadCallback(drawChart);
        function drawChart() {
            var data = new google.visualization.DataTable();
            data.addColumn('string', 'Name');
            data.addColumn('number', 'Value');
            data.addColumn({ type: 'string', role: 'style' });
            data.addRows([
                ['2014', 600, 'color: #9d426b'],
                ['2015', 700, 'color: #3fb0e9'],
                ['2016', 800, 'color: #42c698'],
                ['2016', 900, 'color: red'],
                ['2016', 1000, 'color: gold']
            ]);

            var options = {
                chart: {
                    title: 'Company Performance',
                    subtitle: 'Sales, Expenses, and Profit: 2014-2017',
                },
                title: 'Trending Products Chart',
                hAxis: {
                    title: 'Popularity',
                },
                bars: 'horizontal', // Required for Material Bar Charts.
                width: 712,
                height: 370
            };


            var chart = new google.visualization.BarChart(document.getElementById('prodDesc'));
            chart.draw(data, options);


        }
    </script>







</head>
<body style="background-color: white">

    <header id="header_wrapper">
        <div class="container">
            <div class="header_box">
                <div class="logo">
                    <a href="../../ADAMHome/index">
                        <img src="~/img/logo.png" alt="logo" style="width: 60%;">
                    </a>
                </div>
                <nav class="navbar navbar-inverse" role="navigation">
                    <div class="navbar-header">
                        <button type="button" id="nav-toggle" class="navbar-toggle" data-toggle="collapse" data-target="#main-nav"><span class="sr-only">Toggle navigation</span> <span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span></button>
                    </div>
                    <div id="main-nav" class="navbar-header" @*class="collapse navbar-collapse navStyle"*@>
                        <ul class="nav nav-pills" id="mainNav">
                            <li class="active"><a href="../../ADAMHome/index" class="scroll-link"><strong>Home</strong></a></li>
                            <li><a href="#service" class="scroll-link"><strong>Top Rated Products</strong></a></li>
                            <li><a href="#ProductReview" class="scroll-link"><strong>Reviews</strong></a></li>
                            <li><a href="#contact" class="scroll-link"><strong>Contact</strong></a></li>
                        </ul>

                    </div>
                    <div class="col-lg-4">
                        <form action="Home/Products" method="post" class="navbar-form navbar-right" role="search">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Search here...">
                            </div>

                            <button type="submit" class="btn btn-default" id="search"><strong>Search</strong></button>
                        </form>
                    </div>
                    <div class="container">
                        <div class="col-lg-1">
                            <button type="submit" class="btn btn-default" onclick="location.href = '../../ADAMHome/Login'" id="LoginBut"><strong>Login</strong></button>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </header>
    <!--Hero_Section-->
    <div class="container">
        <section id="prodDescription_section" class="ProductPageTop" style="display: none">
            <div class="hero_wrapper" id="prodGraph" style="margin-left: 180px; align-content: center; background-color: #F5F5F5; display: none">
            </div>
        </section>
        <!--Hero_Section-->
        <!--Service-->
        <section id="service">
            <div style="align-self: center">
                <h3 id="ProductTitle">@Model.Title</h3>
            </div>
            <div class="row">

                <div class="col-lg-12">
                    <div class="rcorners">

                        <div class="row" id="product">

                            @*------------------------*@
                            <ul class="nav nav-tabs">
                                <li class="active"><a data-toggle="tab" href="#home">Product Specifications</a></li>
                                <li><a data-toggle="tab" href="#menu1">Product Review</a></li>
                                <li><a data-toggle="tab" href="#menu3">Suggestions</a></li>
                            </ul>

                            <div class="tab-content">
                                <div id="home" class="tab-pane fade in active">
                                    @*------------------------*@
                                    <br />

                                    <!--table-->
                                    <div class="span3 tiny ">
                                        <div class="pricing-table-header-tiny">
                                            <h3 class="detail-product">Product Details</h3>

                                        </div>

                                        <div class="row">
                                            <div class="col-md-4" >
                                                <div class="row" id="productThumbnail">
                                                    <a href="#" class="thumbnail">
                                                        <img src="@Model.ImageUrl" alt="@Model.Title">
                                                    </a>
                                                </div>

                                                <div class="row" id="prodDescBox">
                                                    <p class="descriptionHeader">Description</p>
                                                    <p>@Model.ProductDescription</p>
                                                    <p><b>Price &nbsp;</b>@Model.Price</p>
                                                    
                                                    

                                                </div>
                                                <br />
                                            </div>

                                            <div class="col-md-8">
                                                <div class="description" id="prodDesc">
                                                </div>

                                            </div>
                                            

                                        </div>
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <div class="table-responsive">
                                                    <table class="table table-bordered">
                                                        <thead>
                                                            <tr>

                                                                <th>Features</th>
                                                                <th>Details</th>

                                                            </tr>
                                                        </thead>
                                                        <tbody>

                                                            @foreach (var spec in @Model.Product_Specification)
                                                            {
                                                                <tr>

                                                                    <td>@spec.Specification.Name</td>

                                                                    <td>@spec.Value</td>

                                                                </tr>
                                                            }





                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- <div class="pricing-table-signup-tiny">
                                            <p><a href="#">Sign Up</a></p>
                                        </div>-->
                                    </div>

                                    @*------------------------*@
                                </div>


                                <div id="menu1" class="tab-pane fade">
                                    <br />

                                    <h3>Customer Reviews</h3>
                                    @foreach (var review in @Model.ProductReviews)
                                    {
                                        <div class="row">
                                            <div class="col-md-2">
                                                <a href="#" class="thumbnail">
                                                    <img src="http://www.free-icons-download.net/images/user--user-icon-32727.png" alt="USer">
                                                </a>
                                            </div>
                                            <div class="col-md-9">
                                                <div class="p-class">
                                                    <p class="p-class">@review.Review</p>
                                                </div>
                                            </div>
                                        </div>
                                    }

                                </div>

                                <div id="menu3" class="tab-pane fade">

                                    <br />
                                    <h3>Suggested Products</h3>
                                    <p>&nbsp;Macbook Air 2015</p>
                                </div>
                            </div>
                            @*------------------------*@

                        </div>
                    </div>

                </div>
        </section>
        <!--Service-->
        <!-- Portfolio -->
        <section id="ProductReview" class="content">
            <div class="row">
                <div class="col-lg-8"></div>
            </div>
        </section>
        <!--/Portfolio -->

    </div>
    <!--Aboutus-->
    <!--Footer-->
    <footer class="footer_wrapper" id="contact1" style="background-color: #D3D3D3;">
        <div class="container">
            <section class="page_section contact" id="contact">
                <div class="contact_section">
                    <h2>Contact Us</h2>
                    <div class="row">
                        <div class="col-lg-4">
                        </div>
                        <div class="col-lg-4">
                        </div>
                        <div class="col-lg-4">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-4 wow fadeInLeft">
                        <div class="contact_info">
                            <div class="detail">
                                <h4>UNIQUE Infoway</h4>
                                <p>104, Some street, NewYork, USA</p>
                            </div>
                            <div class="detail">
                                <h4>call us</h4>
                                <p>+1 234 567890</p>
                            </div>
                            <div class="detail">
                                <h4>Email us</h4>
                                <p>support@sitename.com</p>
                            </div>
                        </div>



                        <ul class="social_links">
                            <li class="twitter animated bounceIn wow delay-02s"><a href="javascript:void(0)"><i class="fa fa-twitter"></i></a></li>
                            <li class="facebook animated bounceIn wow delay-03s"><a href="javascript:void(0)"><i class="fa fa-facebook"></i></a></li>
                            <li class="pinterest animated bounceIn wow delay-04s"><a href="javascript:void(0)"><i class="fa fa-pinterest"></i></a></li>
                            <li class="gplus animated bounceIn wow delay-05s"><a href="javascript:void(0)"><i class="fa fa-google-plus"></i></a></li>
                        </ul>
                    </div>
                    <div class="col-lg-8 wow fadeInLeft delay-06s">
                        <div class="form">
                            <input class="input-text" type="text" name="" value="Your Name *" onfocus="if(this.value==this.defaultValue)this.value='';" onblur="if(this.value=='')this.value=this.defaultValue;">
                            <input class="input-text" type="text" name="" value="Your E-mail *" onfocus="if(this.value==this.defaultValue)this.value='';" onblur="if(this.value=='')this.value=this.defaultValue;">
                            <textarea class="input-text text-area" cols="0" rows="0" onfocus="if(this.value==this.defaultValue)this.value='';" onblur="if(this.value=='')this.value=this.defaultValue;">Your Message *</textarea>
                            <input class="input-btn" type="submit" value="send message">
                        </div>
                    </div>
                </div>
            </section>
        </div>
        <div class="container">
            <div class="footer_bottom"><span>Copyright © 2014,    Template by <a href="http://webthemez.com">WebThemez.com</a>. </span></div>
        </div>
    </footer>



    <script src="~/Scripts/jquery-1.11.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-scrolltofixed.js"></script>
    <script src="~/Scripts/jquery.nav.js"></script>
    <script src="~/Scripts/jquery.easing.1.3.js"></script>
    <script src="~/Scripts/jquery.isotope.js"></script>
    <script src="~/Scripts/fancybox/jquery.fancybox.pack.js"></script>
    <script src="~/Scripts/wow.js"></script>
    <script src="~/Scripts/custom.js"></script>
    <script src="~/Scripts/jquery.reveal.js"></script>

</body>
</html>



